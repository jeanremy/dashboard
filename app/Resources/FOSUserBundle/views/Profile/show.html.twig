{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>{{user.username}}</title>
{% endblock %}

{% block body %}
        
    <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn--edit"></a>
    <h1 class="lvl1">
        <img src="{{ user.image.webPath | apply_filter('miniature') }}" / class="profil__pic">
        {{user.username}}
    </h1>

    {% include "FlydDashboardBundle::flash.html.twig" %}


    <div class="row">
        <div class="col-sm-12">
            <div class="bloc bloc--general">
                <h2 class="bloc__title">Informations générales</h2>

                <div class="form-group">
                    
                    <label class="control-label">Fonction</label>

                    <div class="data">
                        {{ user.job }}
                    </div>

                </div>

                <div class="form-group">
                    
                    <label class="control-label">Email</label>

                    <div class="data">
                        <p>{{ user.email }}</p>
                    </div>
                    
                </div>

            </div>
        </div>
    </div>

{% endblock %}
