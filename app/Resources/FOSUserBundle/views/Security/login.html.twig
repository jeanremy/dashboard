{% extends "FlydDashboardBundle::layout.html.twig" %}


{% block title %}
    <title>Se connecter</title>
{% endblock %}


{% block body %}
	<h1 class="lvl1">Se connecter</h1>
	{% block fos_user_content %}
	{% if error %}

	<div class="row">
		<div class="col-sm-12">
			<div class="bloc">
	    		<p class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
	    	</div>
	    </div>
	</div>
	{% endif %}

    {% include "FlydDashboardBundle::flash.html.twig" %}

	<form action="{{ path("fos_user_security_check") }}" method="post">

		<div class="row">
			<div class="col-sm-12">
				<div class="bloc bloc--general edit">
	    		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

				<div class="form-group">
	    			<label for="username" class="control-label">Nom d'utilisateur</label>

					<div class="data">
	    				<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
					</div>
				</div>

				<div class="form-group">
	    			<label for="password" class="control-label">Mot de passe</label>

					<div class="data">
	    				<input type="password" id="password" name="_password" required="required" class="form-control"  />
					</div>
				</div>
				
				<div class="form-group">
	    			<label for="remember_me" class="control-label">Se souvenir de moi</label>

					<div class="data">
	    				<input type="checkbox" id="remember_me" name="_remember_me" value="on" class="form-control" />
					</div>
				</div>
			</div>
	    	<input type="submit" id="_submit" name="_submit" value="Se connecter" class="btn btn--save"/>
		</div>
	</form>
	{% endblock fos_user_content %}
{% endblock body %}
