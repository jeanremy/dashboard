{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>Nouveau besoin</title>
{% endblock %}

{% block body -%}

    <p class="breadcrumb"><a href="{{ path('client_show', { 'id': entity.client.id }) }}">{{entity.client}}</a></p>
    
    <h1 class="lvl1">Nouveau besoin</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {% if form_errors(form) %}
  <div class="row">
    <div class="col-sm-12">
      <div class="bloc">
          {{ form_errors(form) }}
      </div>
    </div>
  </div>
  {% endif %}

    <div class="row">
        <div class="col-sm-12">
            <div class="bloc bloc--general bloc-inline-edition edit">
                <h2 class="bloc__title">Informations générales</h2>

                <div class="form-group">
                    {{ form_label(form.title, "Titre", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.title) }}

                  <div class="data">
                    {# Génération de l'input. #}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.description, "Description", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.description) }}

                    <div class="data">
                        {# Génération de l'input. #}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.startDate, "Date de début", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.startDate) }}

                    <div class="data">
                        {# Génération de l'input. #}
                        {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.deadline, "Deadline", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.deadline) }}

                    <div class="data">
                        {# Génération de l'input. #}
                        {{ form_widget(form.deadline, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.endDate, "Date de fin", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.endDate) }}

                    <div class="data">
                        {# Génération de l'input. #}
                        {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_widget(form.client, {'attr': {'style': 'display: none;'}}) }}

                </div>

                
                {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
                {{ form_widget(form.save) }}


                {# Génération automatique des champs pas encore écrits.
                Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                et tous les champs cachés (type « hidden »). #}
                {{ form_rest(form) }}

                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}
            </div>
        </div>
    </div>



    

{% endblock %}