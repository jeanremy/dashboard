{# menu.html #}


<aside class="aside" id="aside">
	<div class="user">
		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			{% if app.user.image %}
			<a href="{{ path('user_show', { 'id': app.user.id }) }}"><img src="{{ app.user.image.webPath | apply_filter('demi') }}" / class="profil__pic"></a>
			{% endif %}
			<p class="user__name">
				<a href="{{ path('user_show', { 'id': app.user.id }) }}">{{ app.user.username }}</a>
			</p>
			<p class="user__logout">
				<a href="{{ path('fos_user_security_logout') }}">{{ 'Déconnexion' }}</a>
			</p>
        {% else %}
            <p class="user__login"><a href="{{ path('fos_user_security_login') }}">Log in</a></p>
        {% endif %}
	</div>
	<nav class="nav">
		<ul class="menu">
			<li>
				<a href="{{path('flyd_dashboard_homepage')}}" class="dashicons dashicons-dashboard{% if menu == 'dashboard' %} active{% endif %}">Dashboard</a>
			</li>
			<li>
				<a href="{{path('client_list')}}" class="dashicons dashicons-businessman{% if menu == 'client' %} active{% endif %}">Clients</a>
			</li>
			<li>
				<a href="{{path('user_list')}}" class="dashicons dashicons-admin-users{% if menu == 'user' %} active{% endif %}">Utilisateurs</a>
			</li>
			<li>
				<a href="{{path('supplier_list')}}" class="dashicons dashicons-groups{% if menu == 'supplier' %} active{% endif %}">Fournisseurs</a>
			</li>
			<li>
				<a href="{{path('flyd_dashboard_homepage')}}" class="dashicons dashicons-clipboard{% if menu == 'project' %} active{% endif %}">Projet</a>
			</li>
			<li>
				<a href="{{path('flyd_dashboard_homepage')}}" class="dashicons dashicons-admin-generic{% if menu == 'settings' %} active{% endif %}">Réglages</a>
			</li>
		</ul>
	</nav>
</aside>