{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>{{entity.name}}</title>
{% endblock %}

{% block body %}
        
    <a href="{{ path('client_delete', { 'id': entity.id }) }}" class="btn--delete">Delete</a>
    <a href="{{ path('client_edit', { 'id': entity.id }) }}" class="btn--edit">Edit</a>
    <h1 class="lvl1">{{entity.name}}</h1>
    <div class="row">
        <div class="col-sm-12">
            <div class="bloc bloc--general bloc-inline-edition">
                <h2 class="bloc__title">Informations générales</h2>

                <div class="form-group">
                    
                    <label class="control-label">Date d'entrée</label>

                    <div class="data">
                        {{ entity.entrance| localizeddate('full', 'none', 'fr') }}
                    </div>

                </div>

                {% if entity.origin %}
                <div class="form-group">
                    
                    <label class="control-label">Origine</label>

                    <div class="data">
                        {{ entity.origin.name }}
                    </div>

                </div>
                {% endif %}
                
                <div class="form-group">
                    
                    <label class="control-label">Type de Client</label>

                    <div class="data">
                    {% if entity.type == 0 %}
                        <p>Actuel</p>
                    {% elseif entity.type == 1 %}
                        <p>Prospect</p>
                    {% endif %}
                    </div>
                    
                </div>

                {%for address in entity.addresses %}

                <div class="form-group">
                    {% if address.type == 0 %}
                        <label class="control-label">Adresse</label>
                    {% elseif address.type == 1 %}
                        <label class="control-label">Adresse de facturation</label>
                    {% elseif address.type == 2 %}
                        <label class="control-label">Adresse d'expédition</label>
                    {% endif %}
                    <div class="data">
                        <p>{{ address.street }}</p>
                        <p>{{ address.streetComp }}</p>
                        <p>{{ address.zipcode }} {{ address.city }} {{ address.cityComp }}</p>
                    </div>
                    
                </div>

                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Contacts -->
    <div class="row">
        <div class="col-sm-12">
            <div class="bloc">
                <h2 class="bloc__title">Contacts</h2>
                <div class="row" id="contacts">
                    {% for contact in entity.contacts %}
                      {% include "FlydDashboardBundle:Contact:show.html.twig" %}                    
                    {% endfor %}
                </div> 
                <a href="{{ path('contact_ajax_delete') }}" class="pull-right btn--add">+</a> 
                {{ render(controller('FlydDashboardBundle:Contact:getForm', {'id': entity.id})) }}
            </div>
        </div>
    </div>

     <!-- Besoins -->
    <div class="row">
        <div class="col-sm-12">
            <div class="bloc">
                <a href="{{ path('need_add', { 'id': entity.id }) }}" class="btn--new">+</a>
                <h2 class="bloc__title">Besoins</h2>
                <div class="row">
                    {%for need in entity.needs %}
                    <div class="col-sm-6">
                        <p class="need__dates">
                            {{ need.startDate| localizeddate('full', 'none', 'fr') }} > 
                            {% if need.endDate %}
                            {{ need.endDate| localizeddate('full', 'none', 'fr') }}
                            {% else %}...
                            {% endif %}
                        </p>
                        <a href="{{ path('need_delete', { 'id': need.id }) }}" class="pull-right btn--delete">+</a>
                        <a href="{{ path('need_edit', { 'id': need.id }) }}" class="pull-right btn--edit">+</a>

                        <p class="need__title">{{need.title}}</p>
                        <p class="need__description">{{need.description}}</p>
                        
                    </div>
                    {% endfor %}
                </div> 
            </div>    
        </div>
    </div>

{% endblock %}

{% block js %}
    <script type="text/javascript" src="{{ asset('bundles/flyddashboard/js/additems.js') }}"></script>
{% endblock %}