<div class="row" id="newaddress">
								
{{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'flyd_dashboardbundle_address'}, 'action': path('address_ajax_add')}) }}


	{% if form_errors(form) %}
	<div class="col-sm-12">
		{{ form_errors(form) }}
	</div>
	{% endif %}


	<div class="col-sm-12 bloc-inline-edition">
		<h2 class="bloc__title">Nouvelle adresse</h2>
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					{{ form_label(form.building, "Bâtiment", {'label_attr': {'class': 'control-label'}}) }}

					{{ form_errors(form.building) }}

					<div class="data">
						{{ form_widget(form.building, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.street, "Rue", {'label_attr': {'class': 'control-label'}}) }}

					{{ form_errors(form.street) }}

					<div class="data">
						{{ form_widget(form.street, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.streetComp, "Complément d'adresse", {'label_attr': {'class': 'control-label'}}) }}

					{{ form_errors(form.streetComp) }}

					<div class="data">
						{{ form_widget(form.streetComp, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.zipcode, "Code postal", {'label_attr': {'class': 'control-label'}}) }}

					{{ form_errors(form.zipcode) }}

					<div class="data">
						{{ form_widget(form.zipcode, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					{{ form_label(form.city, "Ville", {'label_attr': {'class': 'control-label'}}) }}

					{{ form_errors(form.city) }}

					<div class="data">
						{{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.cityComp, "Complément (Cedex, etc.)", {'label_attr': {'class': 'control-label'}}) }}

					{{ form_errors(form.cityComp) }}

					<div class="data">
						{{ form_widget(form.cityComp, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="form-group">
					{{ form_label(form.type, "Type d'adresse", {'label_attr': {'class': 'control-label'}}) }}

					{{ form_errors(form.type) }}

					<div class="data">
						{{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="data">
						{{ form_widget(form.company, {'attr': {'style': 'display: none;'}}) }}
					</div>
				</div>
			</div>
		</div>
		<div class="form-group">
			{{ form_widget(form.save) }}
		</div>
	</div>



	{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}


	{# Génération automatique des champs pas encore écrits.
	Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
	et tous les champs cachés (type « hidden »). #}
	{{ form_rest(form) }}

	{# Fermeture de la balise <form> du formulaire HTML #}
{{ form_end(form) }}
</div>
