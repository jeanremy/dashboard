{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>Adresse {{entity.type.name}} - Modifier</title>
{% endblock %}

{% block top %}
    <p>
        <span class="prev"><a href="{{ path('client_list') }}">Clients</a></span>
        <span class="prev"><a href="{{ path('client_show', { 'id': entity.company.id }) }}">{{ entity.company.name }}</a></span>
        Modifier
    </p>
{% endblock %}

{% block body %}
    
    <div class="title__container">
        <h1 class="lvl1">Adresse {{entity.type.name}}</h1>
    </div>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	{% if form_errors(form) %}
	<div class="row">
		<div class="col-sm-12">
			<div class="bloc">
    			{{ form_errors(form) }}
			</div>
		</div>
	</div>
	{% endif %}

    <div class="row">
        <div class="col-sm-12">
            <div class="bloc bloc--general bloc-inline-edition edit">
                <h2 class="bloc__title">Informations générales</h2>

                
                <div class="form-group">
                    {{ form_label(form.building, "Bâtiment", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.building) }}

                    <div class="data">
                        {{ form_widget(form.building, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.street, "Rue", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.street) }}

                    <div class="data">
                        {{ form_widget(form.street, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.streetComp, "Complément d'adresse", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.streetComp) }}

                    <div class="data">
                        {{ form_widget(form.streetComp, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.zipcode, "Code postal", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.zipcode) }}

                    <div class="data">
                        {{ form_widget(form.zipcode, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            
                <div class="form-group">
                    {{ form_label(form.city, "Ville", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.city) }}

                    <div class="data">
                        {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.cityComp, "Complément (Cedex, etc.)", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.cityComp) }}

                    <div class="data">
                        {{ form_widget(form.cityComp, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.type, "Type d'adresse", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.type) }}

                    <div class="data">
                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="data">
                        {{ form_widget(form.company, {'attr': {'style': 'display: none;'}}) }}
                    </div>
                </div>
                
                <a href="{{ path('client_delete', { 'id': entity.id }) }}" class="btn--delete--reverse">Supprimer</a>
                {{ form_widget(form.save) }}


                {# Génération automatique des champs pas encore écrits.
                Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                et tous les champs cachés (type « hidden »). #}
                {{ form_rest(form) }}

                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    <script type="text/javascript" src="{{ asset('js/additems.js') }}"></script>
{% endblock %}
