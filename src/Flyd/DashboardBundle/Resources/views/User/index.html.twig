{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>Tous les utilisateurs</title>
{% endblock %}

{% block body %}
        
    <h1 class="lvl1">Tous les utilisateurs</h1>

    {% include "FlydDashboardBundle::flash.html.twig" %}

    {% for user in entities %}
    <div class="row">
        <div class="col-sm-12">
            <div class="bloc bloc--general">
                {% if app.user.id == user.id %}
                    <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn--edit"></a>
                {% endif %}
                <h2 class="bloc__title">
                    <a href="{{ path('user_show', { 'id': user.id }) }}">{{user.username}}</a>
                </h2>

                <div class="form-group">
                    
                    <label class="control-label">Fonction</label>

                    <div class="data">
                        {{ user.job }}
                    </div>

                </div>

                <div class="form-group">
                    
                    <label class="control-label">Email</label>

                    <div class="data">
                        <p>{{ user.email }}</p>
                    </div>
                    
                </div>


                {% if user.image %}
                <div class="form-group">
                    <label class="control-label">Profil</label>
                    <div class="data">
                        <img src="{{ user.image.webPath | apply_filter('miniature') }}" />
                    </div>
                    
                </div>
                {% endif %}

            </div>
        </div>
    </div>
    {% endfor %}

{% endblock %}
