{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>Modèle de projet</title>
{% endblock %}

{% block top %}
    <p>Modèle de projet</p>
{% endblock %}

{% block body %}
     <div class="title__container">
        <a href="{{ path('projectcanvas_add') }}" class="btn btn--edit">Nouveau modèle de projet</a>
        <h1 class="lvl1">Modèles de projet</h1>
    </div>

    <div class="row">
        {% for entity in entities %}
        <div class="col-sm-12">
            <div class="bloc bloc--general bloc--search projectcanvas">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="bloc__title">
                            <a href="{{ path('projectcanvas_show', { 'id': entity.id }) }}">{{entity.name }}</a>
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>


{% endblock %}
