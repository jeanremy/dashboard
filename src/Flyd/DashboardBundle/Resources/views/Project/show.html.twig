{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>{{entity.need.client}} > {{entity.need}} > {{entity.title}}</title>
{% endblock %}

{% block body %}
    
    <a href="{{ path('project_delete', { 'id': entity.id }) }}" class="btn--delete">Delete</a>
    <a href="{{ path('project_edit', { 'id': entity.id }) }}" class="btn--edit">Edit</a>

    <p class="breadcrumb">
       <a href="{{ path('client_show', { 'id': entity.need.client.id }) }}">{{entity.need.client}} ></a>
       <a href="{{ path('need_show', { 'id': entity.need.id }) }}">{{entity.need}}</a>
    </p>
    <h1 class="lvl1">{{entity.title}}</h1>

    <div class="row">
        <div class="col-sm-8">
            <div class="bloc bloc-inline-edition">
                <h2 class="bloc__title">Informations générales</h2>

                <div class="form-group">
                    <label class="control-label">Catégorie</label>

                    <div class="data">
                        <p>{{entity.category}}</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Date de début</label>

                    <div class="data">
                        {{ entity.startDate| localizeddate('full', 'none', 'fr') }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Deadline</label>

                    <div class="data">
                        {{ entity.deadline| localizeddate('full', 'none', 'fr') }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Date de fin</label>

                    <div class="data">
                        {{ entity.endDate| localizeddate('full', 'none', 'fr') }}
                    </div>
                </div>


            </div>
            <div class="bloc project__suppliers">
                <h2 class="bloc__title">Fournisseurs</h2>
                <div class="row">
                    {% for supplier in entity.suppliers %}
                        {% include "FlydDashboardBundle:Supplier:mini.html.twig" %}
                    {% endfor %}
                </div>
                <button class="btn--add">+</button>
                {{ render(controller('FlydDashboardBundle:Supplier:getForm', {'id': entity.id}) ) }}
                
            </div>
        </div>
        <div class="col-sm-4">
            <div class="bloc project__team">
                <h2 class="bloc__title">équipe</h2>
                <div class="row">                    
                {% for user in entity.users %}
                    {% include "FlydDashboardBundle:User:mini.html.twig" %}                    
                {% endfor %}
                </div>                
                <button class="btn--add">+</button>
                {{ render(controller('FlydDashboardBundle:User:getForm', {'id': entity.id}) ) }}                
            </div>
        </div>
        <div class="col-sm-12">
            <div class="bloc">
                <h2 class="bloc__title">Tâches prédéfinies</h2>
                {% if entity.projecttaskusers %}
                <table class="taskcontainer">
                    <thead class="thead">
                        <tr>
                            <th>Êtapes</th>
                            <th>Tâche</th>
                            <th>Temps estimé</th>
                            <th>Temps réel</th>
                            <th>Statut</th>
                            <th>Personne</th>
                            <th>Important</th>
                            <th>Suppr</th>
                        </tr>
                    </thead>

                    <tbody class="tbody">
                    {% for form in forms %}
                        
                        <tr class="task sortable">
                            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                                <td>
                                    {{ form_widget(form.task.step, {'attr': {'class': 'form-control'}}) }}   
                                    {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}                              
                                </td>
                                <td>
                                    {{ form_widget(form.task.name, {'attr': {'class': 'form-control'}}) }}                                    
                                </td>
                                <td>
                                    {{ form_widget(form.estimatedtime, {'attr': {'class': 'form-control'}}) }}                                     
                                </td>
                                <td>
                                    {{ form_widget(form.realtime, {'attr': {'class': 'form-control'}}) }}  
                                </td>
                                <td>
                                    {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}                                  
                                </td>
                                <td>
                                    {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }} 
                                </td>
                                <td>
                                    {{ form_widget(form.isimportant, {'attr': {'class': 'form-control'}}) }} 
                                </td>
                                <td><a href="" class="line--remove remove-task">Retirer</a></td>
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                            </form>
                        </tr>
                    {% endfor %}                        
                    </tbody>
                </table>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
     <script type="text/javascript" src="{{ asset('bundles/flyddashboard/js/additems.js') }}"></script>   
{% endblock %}