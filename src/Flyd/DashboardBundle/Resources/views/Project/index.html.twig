{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>Dashboard</title>
{% endblock %}

{% block top %}
    <p>Projets</p>
{% endblock %}

{% block body %}
    <div class="title__container">
        <a href="{{ path('client_add') }}" class="btn btn--edit">Nouveau client</a>
        <h1 class="lvl1">Dashboard</h1>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="bloc bloc--general">
                <form action="" id="sort-projects">
                    <p>Filtrer par:
                        <select name="" id="">
                            <option value="null">Utilisateurs</option>
                        </select>
                        <select name="" id="">
                            <option value="null">Type de projet</option>                        
                        </select>
                        <select name="" id="">
                            <option value="null">Statut des projets</option>                        
                        </select>
                    </p>
                </form>
            </div>
        </div>
    </div>

    {% include "FlydDashboardBundle::flash.html.twig" %}

    {% for entity in entities %}
    <div class="row">
        <div class="col-sm-12 project">
            <div class="project__title">
                {% for ptu in entity.projecttaskusers %}
                    {% if ptu.status.name is defined %}
                        {% if ptu.status.name == 'En cours' %}
                            <div class="pending"></div>
                        {% elseif ptu.status.name == 'En cours de validation' %}
                            <div class="pending--validation"></div>
                        {% elseif ptu.status.name == 'A venir' %}
                            <div class="coming"></div>
                        {% elseif ptu.status.name == 'Terminé' %}
                            <div class="closed"></div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
                <h2>
                    <span class="project__title__infos">{{ entity.need.client.name }} > {{ entity.need.title }}</span>
                    <a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.title }}</a>
                </h2>
            </div>
            <div class="bloc bloc--general bloc-inline-edition">
                <div class="form-group">
                    
                    <label class="control-label">Catégorie</label>

                    <div class="data">
                        {{ entity.category }}
                    </div>

                </div>

                <div class="form-group">
                    
                    <label class="control-label">En cours</label>

                    <div class="data">
                        {% for ptu in entity.projecttaskusers %}
                            {% if ptu.status.name is defined %}
                                <ul>
                                {% if ptu.status.name == 'En cours' %}
                                    <li>{{ ptu.task.step }} > {{ ptu.task.name }}</li>
                                {% endif %}
                                </ul>
                            {% endif %}
                        {% endfor %}
                    </div>

                </div>

                <div class="form-group">
                    
                    <label class="control-label">A venir</label>

                    <div class="data">
                        {% for ptu in entity.projecttaskusers %}
                            {% if  ptu.status.name is defined %}
                                <ul>
                                {% if ptu.status.name == 'A venir' %}
                                    <li>{{ ptu.task.step }} > {{ ptu.task.name }}</li>
                                {% endif %}
                                </ul>
                            {% endif %}
                        {% endfor %}
                    </div>

                </div>

                <div class="form-group">
                    
                    <label class="control-label">Equipe</label>

                    <div class="data">
                        {% for user in entity.users %}
                            {{ user.username }}
                        {% endfor %}
                    </div>

                </div>

                <div class="form-group">
                    
                    <label class="control-label">Deadline</label>

                    <div class="data">
                        {{ entity.deadline| localizeddate('full', 'none', 'fr') }}
                    </div>

                </div>

                

            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}
