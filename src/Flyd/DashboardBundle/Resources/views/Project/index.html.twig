{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>Dashboard</title>
{% endblock %}

{% block top %}
    <p>Projets</p>
{% endblock %}

{% block body %}
    <div class="title__container">
        <a href="{{ path('client_add') }}" class="btn btn--edit">Nouveau client</a>
        <h1 class="lvl1">Dashboard</h1>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="bloc bloc--general">
                <form action="" id="sort-projects">
                    <p>Filtrer par:
                        <select name="" id="">
                            <option value="null">Utilisateurs</option>
                        </select>
                        <select name="" id="">
                            <option value="null">Type de projet</option>                        
                        </select>
                        <select name="" id="">
                            <option value="null">Statut des projets</option>                        
                        </select>
                    </p>
                    <a href="#" class="btn--save--reverse">Appliquer</a>

                </form>
            </div>
        </div>
    </div>

    {% include "FlydDashboardBundle::flash.html.twig" %}

    {% for entity in entities %}
    <div class="row">
        <div class="col-sm-12 project">
            <div class="project__title">
                {{ render(controller('FlydDashboardBundle:ProjectTaskUser:getCurrentStatus', {'id': entity.id}) ) }}
                <h2>
                    <span class="project__title__infos">{{ entity.need.client.name }} > {{ entity.need.title }}</span>
                    <a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.title }}</a>
                </h2>
            </div>
            <div class="bloc bloc--general bloc-inline-edition">
                <div class="form-group">                    
                    <label class="control-label">Cat√©gorie</label>
                    <div class="data">
                        {{ entity.category }}
                    </div>
                </div>

                <div class="form-group">                    
                    <label class="control-label">En cours</label>
                    <div class="data">
                        {{ render(controller('FlydDashboardBundle:ProjectTaskUser:getFirstPendingTask', {'id': entity.id}) ) }}
                    </div>
                </div>

                <div class="form-group">                    
                    <label class="control-label">A venir</label>
                    <div class="data">
                            {{ render(controller('FlydDashboardBundle:ProjectTaskUser:getFirstComingTask', {'id': entity.id}) ) }}                        
                    </div>
                </div>

                <div class="form-group">                    
                    <label class="control-label">Equipe</label>
                    <div class="data">
                        {% for user in entity.users %}
                            {{ user.username }}
                        {% endfor %}
                    </div>
                </div>

                <div class="form-group">                    
                    <label class="control-label">Deadline</label>
                    <div class="data">
                        {{ entity.deadline| localizeddate('full', 'none', 'fr') }}
                    </div>
                </div>

                <a href="{{ path('project_show', { 'id': entity.id }) }}" class="btn--save">Voir</a>

                

            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}

{% block js %}
    <script>
    
        $('.project__title').on('click', function(e) {
            e.preventDefault();
            $(this).siblings().slideToggle();
        });

        $('.project .bloc').hide();

    </script>
{% endblock %}

