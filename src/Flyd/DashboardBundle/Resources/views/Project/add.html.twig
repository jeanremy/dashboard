{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>Nouveau projet</title>
{% endblock %}

{% block body %}
    
    <p class="breadcrumb">
       <a href="{{ path('client_show', { 'id': entity.need.client.id }) }}">{{entity.need.client}}</a>
         > 
        <a href="{{ path('need_show', { 'id': entity.need.id }) }}">{{entity.need}}</a></p>
    <h1 class="lvl1">Nouveau projet</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	{% if form_errors(form) %}
	<div class="row">
		<div class="col-sm-12">
			<div class="bloc">
    			{{ form_errors(form) }}
			</div>
		</div>
	</div>
	{% endif %}

    <div class="row">
        <div class="col-sm-8">
            <div class="bloc bloc--general bloc-inline-edition edit">
                <h2 class="bloc__title">Informations générales</h2>

                <div class="form-group">
                    {{ form_label(form.title, "Titre du projet", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.title) }}

                  <div class="data">
                    {# Génération de l'input. #}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.category, "Catégorie", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.category) }}

                    <div class="data">
                        {# Génération de l'input. #}
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.startDate, "Date de début", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.startDate) }}

                    <div class="data">
                        {# Génération de l'input. #}
                        {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.deadline, "Deadline", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.deadline) }}

                    <div class="data">
                        {# Génération de l'input. #}
                        {{ form_widget(form.deadline, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.endDate, "Date de fin", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.endDate) }}

                    <div class="data">
                        {# Génération de l'input. #}
                        {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                
                {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
                {{ form_widget(form.save) }}


                {# Génération automatique des champs pas encore écrits.
                Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                et tous les champs cachés (type « hidden »). #}
                {{ form_rest(form) }}

                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}
            </div>
            <div class="bloc">
                <h2 class="bloc__title">Fournisseur</h2>

                
            </div>
        </div>
        <div class="col-sm-4">
            <div class="bloc">
                <h2 class="bloc__title">équipe</h2>
                {# for user in users #}
                    <h4 class="lvl4"></h4>
                {# endfor #}
            </div>
        </div>
    </div>
    

{% endblock %}