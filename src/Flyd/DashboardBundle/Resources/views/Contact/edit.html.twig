{% extends 'FlydDashboardBundle::layout.html.twig' %}

{% block title %}
    <title>{{entity.firstname}} {{entity.lastname}} - Modifier</title>
{% endblock %}

{% block top %}
    <p>
        <span class="prev"><a href="{{ path('client_list') }}">Clients</a></span>
        <span class="prev"><a href="{{ path('client_show', { 'id': entity.company.id }) }}">{{ entity.company.name }}</a></span>
        {{entity.firstname}} {{entity.lastname}} - Modifier
    </p>
{% endblock %}

{% block body %}
    
    <div class="title__container">
        <h1 class="lvl1">{{entity.firstname}} {{entity.lastname}} - Modifier</h1>
    </div>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	{% if form_errors(form) %}
	<div class="row">
		<div class="col-sm-12">
			<div class="bloc">
    			{{ form_errors(form) }}
			</div>
		</div>
	</div>
	{% endif %}

    <div class="row">
        <div class="col-sm-12">
            <div class="bloc bloc--general bloc-inline-edition edit">
                <h2 class="bloc__title">Informations générales</h2>

                <div class="form-group">
                    {{ form_label(form.lastname, "Nom", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.lastname) }}

                    <div class="data">
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.firstname, "Prénom", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.firstname) }}

                    <div class="data">
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.job, "Emploi", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.job) }}

                    <div class="data">
                    {{ form_widget(form.job, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>


                <div class="form-group">
                    {{ form_label(form.email, "Email", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.email) }}

                    <div class="data">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.phone, "Téléphone", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.phone) }}

                    <div class="data">
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.mobile, "Téléphone portable", {'label_attr': {'class': 'control-label'}}) }}

                    {{ form_errors(form.mobile) }}

                    <div class="data">
                    {{ form_widget(form.mobile, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="data">
                        {{ form_widget(form.company, {'attr': {'style': 'display: none;'}}) }}
                    </div>
                </div>
            
                
                <a href="{{ path('client_delete', { 'id': entity.id }) }}" class="btn--delete--reverse">Supprimer</a>
                {{ form_widget(form.save) }}


                {# Génération automatique des champs pas encore écrits.
                Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                et tous les champs cachés (type « hidden »). #}
                {{ form_rest(form) }}

                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    <script type="text/javascript" src="{{ asset('js/additems.js') }}"></script>
{% endblock %}
