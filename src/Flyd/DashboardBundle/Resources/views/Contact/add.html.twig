<div class="row" id="newcontact">
                
{{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'flyd_dashboardbundle_contact'}, 'action': path('contact_ajax_add')}) }}


	{% if form_errors(form) %}
	<div class="col-sm-12">
		{{ form_errors(form) }}
	</div>
	{% endif %}


    <div class="col-sm-12 bloc-inline-edition">
        <h2 class="bloc__title">Nouveau contact</h2>

        <div class="form-group">
        	{{ form_label(form.firstname, "Prénom", {'label_attr': {'class': 'control-label'}}) }}

    			{{ form_errors(form.firstname) }}

    			<div class="data">
    				{{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
    			</div>
        </div>

        <div class="form-group">
        	{{ form_label(form.lastname, "Nom", {'label_attr': {'class': 'control-label'}}) }}

    			{{ form_errors(form.lastname) }}

    			<div class="data">
    				{{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
    			</div>
        </div>

        <div class="form-group">
          {{ form_label(form.job, "Emploi", {'label_attr': {'class': 'control-label'}}) }}

          {{ form_errors(form.job) }}

          <div class="data">
            {{ form_widget(form.job, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.email, "Email", {'label_attr': {'class': 'control-label'}}) }}

          {{ form_errors(form.email) }}

          <div class="data">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.phone, "Téléphone", {'label_attr': {'class': 'control-label'}}) }}

          {{ form_errors(form.phone) }}

          <div class="data">
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
		    <div class="form-group">
          {{ form_label(form.mobile, "Téléphone portable", {'label_attr': {'class': 'control-label'}}) }}

          {{ form_errors(form.mobile) }}

          <div class="data">
            {{ form_widget(form.mobile, {'attr': {'class': 'form-control'}}) }}
          </div>

          <div class="data">
            {{ form_widget(form.company, {'attr': {'style': 'display: none;'}}) }}
          </div>
        </div>

        <div class="form-group">
        	{{ form_widget(form.save) }}
        </div>
    </div>



	{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}


	{# Génération automatique des champs pas encore écrits.
	Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
	et tous les champs cachés (type « hidden »). #}
	{{ form_rest(form) }}

	{# Fermeture de la balise <form> du formulaire HTML #}
{{ form_end(form) }}
</div>

